{% macro default(item) %}
<div class="card">
    <div class="card-image">
        <figure class="image is-2by1">
            <img src="{{ item.img }}" alt="{{ item.alt }}">
        </figure>
    </div>
    <div class="card-content">
        <div class="content">{{ item.text }}</div>
    </div>
    <footer class="card-footer">
        <a href="{{ item.link }}" class="card-footer-item">詳細を見る</a>
    </footer>
</div>
{% endmacro %}
