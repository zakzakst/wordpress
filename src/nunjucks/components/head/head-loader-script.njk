<!-- ▼▼▼ ロード画面のスタイル・処理 ▼▼▼ -->
<style>
.page-loader {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  justify-content: center;
  align-items: center;
  z-index: 10000;
}
.page-loader__content {
  text-align: center;
}
</style>
<script>
document.addEventListener('DOMContentLoaded', () => {
  setTimeout(() => {
    document.getElementById('js-page-loader').style.display = 'none';
  }, 10000);
}, false);
</script>
<!-- ▲▲▲ ロード画面のスタイル・処理 ▲▲▲ -->
