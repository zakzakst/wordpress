{% extends '_layout/default.njk' %}
{% set PAGE_DATA = {
    TITLE: 'お問い合わせ',
    DESCRIPTION: 'ページの概要',
    PATH: '',
    NAV: 'contact',
    ROOT: '../',
    BREADCRUMBS: [
        {
            PATH: 'index.html',
            LABEL: 'トップページ'
        },
        {
            PATH: 'contact/index.html',
            LABEL: 'お問い合わせ'
        }
    ]
} -%}

{# {% block PAGE_HEAD_FILES -%}
    <!-- ▼▼▼ 読み込みファイル（ページ専用） ▼▼▼ -->
    <link rel="stylesheet" href="/{{ CONSTANTS.SITE_ROOT }}css/top.css">
    <!-- ▲▲▲ 読み込みファイル（ページ専用） ▲▲▲ -->
{%- endblock %} #}

{% block PAGE_CONTENT -%}
    <!-- ▼▼▼ ヒーローエリア ▼▼▼ -->
    <section class="hero is-primary">
        <div class="hero-body">
            <h1 class="title">お問い合わせ</h1>
        </div>
    </section>
    <!-- ▲▲▲ ヒーローエリア ▲▲▲ -->

    {% include '_module/breadcrumb.njk' %}

    <div class="container">
        <!-- ▼▼▼ お問い合わせフォーム ▼▼▼ -->
        <section class="section">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">名前</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input class="input" type="text" placeholder="山田太郎">
                        </div>
                    </div>
                </div>
            </div>
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">メールアドレス</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input class="input" type="email" placeholder="sample@mail.com">
                        </div>
                    </div>
                </div>
            </div>
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">お問い合わせ内容</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <textarea class="textarea" placeholder="お問い合わせ内容を入力してください"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="field is-horizontal">
                <div class="field-label"></div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <button class="button is-primary">送信</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- ▲▲▲ お問い合わせフォーム ▲▲▲ -->
    </div>
{%- endblock %}

{# {% block PAGE_FOOT_FILES -%}
    <!-- ▼▼▼ 読み込みファイル（ページ専用） ▼▼▼ -->
